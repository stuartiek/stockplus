<div class="sideBar" id="sideBar">
    <!-- Mobile Header (Visible only on mobile) -->
    <div class="mobile-header">
        <img class="mobile-logo" src="/images/logo/stock-high-resolution-logo-transparent.png" alt="Logo"/>
        <button class="hamburger" onclick="toggleMenu()" aria-label="Toggle Menu">
            <span class="material-symbols-outlined">menu</span>
        </button>
    </div>

    <!-- Desktop Logo (Visible only on desktop) -->
    <img class="sideLogo" src="/images/logo/stock-high-resolution-logo-transparent.png" alt="Logo"/>
    
    <!-- Navigation Links Container -->
    <div class="nav-container" id="navContainer">
        <ul>
            <li><a href="/dashboard" class="<%= (typeof page !== 'undefined' && page === 'dashboard') ? 'active' : '' %>">Dashboard</a></li>
            <li><a href="/documents" class="<%= (typeof page !== 'undefined' && page === 'documents') ? 'active' : '' %>">Documents</a></li>
            <!-- <li><a href="/stock" class="<%= (typeof page !== 'undefined' && page === 'stock') ? 'active' : '' %>">Stock</a></li> -->
            
            <% if (userType === 'Admin' || userType === 'Owner') { %>
                <a href="/users" class="<%= (typeof page !== 'undefined' && page === 'users') ? 'active' : '' %>">Manage Users</a>
            <% } %>
        </ul>
        
        <div class="sideBtm">
            <ul>
                <li><a href="/account">My Account</a></li>
                <!-- <li><a href="/settings">Settings</a></li> -->
                <li><a href="/logout">Logout</a></li>
            </ul>
            <p>Stock+ &copy; 2025</p>
        </div>
    </div>
</div>

<script>
    function toggleMenu() {
        const navContainer = document.getElementById('navContainer');
        navContainer.classList.toggle('open');
        
        // Optional: Change icon from menu to close
        const icon = document.querySelector('.hamburger span');
        if (navContainer.classList.contains('open')) {
            icon.textContent = 'close';
        } else {
            icon.textContent = 'menu';
        }
    }
</script>