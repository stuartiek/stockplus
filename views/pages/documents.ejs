<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/main.css"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Libre+Barcode+39+Text&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="/images/logo/favicon.png">
    <link rel="manifest" href="/manifest.json">
    <title>Documents</title>
</head>
<body>
    <header>
        <%- include('../partials/header') %>
    </header>
    <main id="stock">
        <%# Display flash messages for success or errors %>
        <% if (success_msg && success_msg.length > 0) { %>
            <div class="alert alert-success"><%= success_msg %></div>
        <% } %>
        <% if (error_msg && error_msg.length > 0) { %>
            <div class="alert alert-danger"><%= error_msg %></div>
        <% } %>

        <!-- Section for Creating and Importing -->
        <div class="doc-actions">
            <!-- Existing Create Document Form -->
            <div class="createDoc">
                <h3>Create New Document</h3>
                <form action="/createDoc" method="POST">
                    <input type="text" name="documentName" placeholder="Document Name" required>
                    <select name="labelType">
                        <option value="Shelf">Shelf</option>
                        <option value="Arm">Arm</option>
                    </select>
                    <button>Create</button>
                </form>
            </div>

            <!-- NEW: Import from Excel Form -->
            <div class="importDoc">
                <h3>Import Stock from Excel</h3>
                <form action="/import-stock" method="POST" enctype="multipart/form-data">
                    <p>Select the document to import stock into:</p>
                    <select name="documentId" required>
                        <option value="" disabled selected>-- Choose a Document --</option>
                        <% documents.forEach(function(doc) { %>
                            <option value="<%= doc._id %>"><%= doc.documentName %></option>
                        <% }); %>
                    </select>
                    <p>Select the .xlsx file to upload:</p>
                    <input type="file" name="stockFile" accept=".xlsx" required>
                    <button type="submit">Import Stock</button>
                </form>
                <small>Ensure your Excel file has headers: <strong>productName, barcode, productCode, brand, category, qty, rrp, price</strong></small>
            </div>
        </div>

        <hr style="margin: 2em 0;">

        <div class="stockHead">
            <h1>Your Documents</h1> 
        </div>
        <div>
            <div class="docDiv">
                <% documents.forEach(function(document) { %>
                    <div class="projectCard">
                        <div class="projectImg">
                            <img src="/images/background/docBackground.jpg" alt=""/>
                        </div>
                        <div class="projectText">
                            <h2><%= document.documentName %></h2>
                            <h3>Label Type - <%= document.labelType %></h3>
                            <p><%= document.published %></p>
                            <p><%= document._id %></p>
                        </div>
                        <div class="btn">
                            <a href="/document/<%= document._id %>/stock" class="open-button">Open</a>
                            <button class="delBtn" onclick="deleteDocument('<%= document._id %>')">
                                <span class="material-symbols-outlined">delete</span>
                            </button>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </main>

    <!-- Hidden form for deleting documents -->
    <form id="deleteDocumentForm" action="/delete-document" method="POST" style="display: none;">
        <input type="hidden" name="documentId" id="documentIdToDelete">
    </form>

    <script>
        function deleteDocument(documentId) {
            const confirmationMessage = "Are you sure you want to delete this document and all of its associated stock items? This action cannot be undone.";
            if (confirm(confirmationMessage)) {
                document.getElementById('documentIdToDelete').value = documentId;
                document.getElementById('deleteDocumentForm').submit();
            }
        }
    </script>
</body>
</html>
