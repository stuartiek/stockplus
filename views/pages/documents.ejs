<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="scripts/stock.js"></script>
    <link rel="stylesheet" href="styles/main.css"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Libre+Barcode+39+Text&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=delete" />
    <link rel="icon" type="image/x-icon" href="images/logo/favicon.png">
    <link rel="manifest" href="manifest.json">
    <title>Stock</title>
</head>
<body>
    <header>
        <%- include('../partials/header') %>
    </header>
    <main id="stock">
        <div>
            <form action="/createDoc" method="POST" >
                <input type="text" name="documentName" placeholder="Document Name">
                <button>Create</button>
            </form>
        </div>
        <div class="stockHead">
           <h1>Stock - </h1> 
        </div>
        <div>
            <% stock.forEach(function(documents) { %>
                <div>
                    <h1><%= documents.documentName %></h1>
                    <p><%= documents.published %></p>
                </div>  
            <% }); %>
        </div>
    </main>
</body>
</html>