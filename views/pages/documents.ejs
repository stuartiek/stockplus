<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="scripts/stock.js"></script>
    <link rel="stylesheet" href="styles/main.css"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Libre+Barcode+39+Text&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=delete" />
    <link rel="icon" type="image/x-icon" href="images/logo/favicon.png">
    <link rel="manifest" href="manifest.json">
    <title>Stock</title>
</head>
<body>
    <header>
        <%- include('../partials/header') %>
    </header>
    <main id="stock">
        <div class="createDoc">
            <form action="/createDoc" method="POST" >
                <input type="text" name="documentName" placeholder="Document Name">
                <select name="labelType">
                        <option value="Shelf">Shelf</option>
                        <option value="Arm">Arm</option>
                </select>
                <button>Create</button>
            </form>
        </div>
        <div class="stockHead">
           <h1>Documents - </h1> 
        </div>
        <div>
            <div class="docDiv">
                <% documents.forEach(function(document) { %>
                    <div class="projectCard">
                        <div class="projectImg">
                            <img src="/images/background/docBackground.jpg" alt=""/>
                        </div>
                        <div class="projectText">
                            <%# Use the new singular "document" variable everywhere inside the loop %>
                            <h2><%= document.documentName %></h2>
                            <h3>Label Type - <%= document.labelType %></h3>
                            <p><%= document.published %></p>
                            <p><%= document._id %></p>
                            
                        </div>
                        <div class="documentBtn">
                            <div class="btn">
                                <a href="/document/<%= document._id %>/stock" class="open-button">Open</a>
                            </div>
                            <div>
                                <button class="delBtn" onclick="deleteDocument('<%= document._id %>')">
                                    <span class="material-symbols-outlined">delete</span>
                                </button>
                            </div>
                            
                        </div>
                        
                    </div>
                <% }); %>
            </div>
            
        </div>
        <form id="deleteDocumentForm" action="/delete-document" method="POST" style="display: none;">
            <input type="hidden" name="documentId" id="documentIdToDelete">
        </form>

        <script>
            function deleteDocument(documentId) {
                const confirmationMessage = "Are you sure you want to delete this document and all of its associated stock items? This action cannot be undone.";
                if (confirm(confirmationMessage)) {
                    document.getElementById('documentIdToDelete').value = documentId;
                    document.getElementById('deleteDocumentForm').submit();
                }
            }
        </script>
    </main>
</body>
</html>