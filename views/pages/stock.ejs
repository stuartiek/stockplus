<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="scripts/stock.js"></script>
    <link rel="stylesheet" href="styles/main.css"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Libre+Barcode+39+Text&display=swap" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="images/logo/favicon.png">
    <link rel="manifest" href="manifest.json">
    <script src="https://kit.fontawesome.com/e71e3c46fe.js" crossorigin="anonymous"></script>
    <title>Stock</title>
</head>
<body>
    <header>
        <%- include('../partials/header') %>
    </header>
    <main id="stock">
        <h1>Stock</h1>
        <br>
        <button popovertarget="createStock">Create </button>
            <div id="createStock" popover>
                <form action="/addStock" method="POST" enctype="multipart/form-data">
                    <input type="file" name="image" accept="image/*" capture="camera" /> <!-- Image upload field -->
                    <input type="text" name="productName" maxlength="35" placeholder="Product Name">
                    <input type="text" name="productCode" placeholder="Product Code">
                    <input type="text" name="Brand" placeholder="Brand">
                    <select name="Category">
                        <option value="Tools" name="News">Tools</option>
                        <option value="Sundries">Sundries</option>
                        <option value="Chemicals">Chemicals</option>
                        <option value="Hardware">Hardware</option>
                        <option value="Misc">Misc</option>
                    </select>
                    <input type="text" name="Qty" placeholder="Qty">
                    <input type="text" name="RRP" placeholder="RRP">
                    <input type="text" name="Price" placeholder="Price">
                    <input type="text" name="Barcode" placeholder="Barcode">

                    <button>Add</button>
                </form>
                
            </div>
            <!-- STOCK FILTER BY BRAND -->
            <form action="/stock" method="GET">
                <label for="categoryFilter">Filter by Category:</label>
                <select name="category" id="categoryFilter">
                    <option value="" <%= selectedCategory === '' ? 'selected' : '' %>>All</option>
                    <option value="Tools" <%= selectedCategory === 'Tools' ? 'selected' : '' %>>Tools</option>
                    <option value="Sundries" <%= selectedCategory === 'Sundries' ? 'selected' : '' %>>Sundries</option>
                    <option value="Chemicals" <%= selectedCategory === 'Chemicals' ? 'selected' : '' %>>Chemicals</option>
                    <option value="Hardware" <%= selectedCategory === 'Hardware' ? 'selected' : '' %>>Hardware</option>
                    <option value="Misc" <%= selectedCategory === 'Misc' ? 'selected' : '' %>>Misc</option>
                </select>
                <button type="submit">Filter</button>
            </form>


            <!-- STOCK IS DISPLAYED IN TABLE action="/selected"-->
        <form id="multiActionForm" class="stockDisplay"  method="POST">
            <table>
                <tr>
                    <th></th>
                    <th>Product Image</th>
                    <th>Product Name</th>
                    <th>Product Code</th>
                    <th>Brand</th>
                    <th>Category</th>
                    <th>Qty</th>
                    <th>RRP</th>
                    <th>Price</th>
                    <th>Barcode</th>
                </tr>
            <% stock.forEach(function(stock) { %>
                    <tr>
                        <td>
                            <input type="checkbox" name="selectedBarcodes[]" value="<%= stock.barcode %>">
                        </td>
                        <td>
                            <% if (stock && stock.imageUrl) { %>
                                <img src="<%= stock.imageUrl %>" alt="Product Image" width="70" height="70">
                            <% } else { %>
                                No image
                            <% } %>
                        </td>
                        <td><%= stock.productName %></td>
                        <td><%= stock.productCode %></td>
                        <td><%= stock.brand %></td>
                        <td><%= stock.category %></td>
                        <td><%= stock.qty %></td>
                        <td>£<%= stock.rrp %></td>
                        <td>£<%= stock.price %></td>
                        <td><span class="barcodeFont"><%= stock.barcode %></span></td>
                        <!-- <td>
                            <form action="/product" method="GET">
                                <input type="hidden" name="barcode" value="<%= stock.barcode %>">
                                <button type="submit">View</button>
                            </form>
                        </td> -->
                        <!-- <td>
                            <form action="/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="barcode" value="<%= stock.barcode %>">
                                <button type="submit">Delete</button>
                            </form>
                        </td> -->
                    </tr>
            <% }); %>
            </table>
            <br>
            <hr>
            <button type="submit" onclick="submitToDelete(event)">Delete Selected</button>
            <button type="submit" onclick="submitToSelected(event)">View Selected</button>
            <!-- <button type="submit">View Selected</button> -->
        </form>
        <script>
            function getCheckedBarcodes() {
                return document.querySelectorAll('input[name="selectedBarcodes"]:checked');
            }

            function submitToSelected(e) {
                const selected = getCheckedBarcodes();
                if (selected.length === 0) {
                    alert('Please select at least one item to view.');
                    e.preventDefault();
                    return;
                }
                const form = document.getElementById('multiActionForm');
                form.action = '/selected';
            }

            function submitToDelete(e) {
                const selected = getCheckedBarcodes();
                if (selected.length === 0) {
                    alert('Please select at least one item to delete.');
                    e.preventDefault();
                    return;
                }
                if (!confirm('Are you sure you want to delete the selected item(s)?')) {
                    e.preventDefault();
                    return;
                }
                const form = document.getElementById('multiActionForm');
                form.action = '/delete';
            }
        </script>
    </main>
</body>
</html>