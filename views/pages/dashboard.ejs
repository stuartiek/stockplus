<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/main.css"/>
    <link rel="icon" type="image/x-icon" href="images/logo/favicon.png">
    <title>Dashboard</title>
    <script src="http://unpkg.com/tone"></script>
</head>
<body>
    <header>
        <%- include('../partials/header') %>
    </header>
    <main id="dashboard">
        <h1>Good Evening - <%= user %></h1>
        <section class="stats">
            <h1>Dashboard</h1>

            <div>
                <h3>Total Stock: <%= totalStock %></h3>
                <h3>Published Stock: <%= publishedStock %></h3>
                <h3>Unpublished Stock: <%= unpublishedStock %></h3>
            </div>

            <div>
                <h3>Latest Published Product</h3>
                <% if (latestProduct) { %>
                    <p><strong>Name:</strong> <%= latestProduct.name %></p>
                    <p><strong>Published Date:</strong> <%= latestProduct.published %></p>
                <% } else { %>
                    <p>No published products yet</p>
                <% } %>
            </div>

            <div>
                <h3>Oldest Published Product</h3>
                <% if (oldestProduct) { %>
                    <p><strong>Name:</strong> <%= oldestProduct.name %></p>
                    <p><strong>Published Date:</strong> <%= oldestProduct.published %></p>
                <% } else { %>
                    <p>No published products yet</p>
                <% } %>
            </div>


            <canvas id="stockChart" width="400" height="200"></canvas>
        <script>
            var ctx = document.getElementById('stockChart').getContext('2d');
            var stockChart = new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: ['Published', 'Unpublished'],
                    datasets: [{
                        data: [<%= publishedStock %>, <%= unpublishedStock %>],
                        backgroundColor: ['#36A2EB', '#FF6384'],
                        hoverOffset: 4
                    }]
                }
            });
        </script>
        </section>




       







    </main>
</body>
</html>