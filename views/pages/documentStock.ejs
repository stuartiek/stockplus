<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/scripts/stock.js"></script>
    <link rel="stylesheet" href="/styles/main.css"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Libre+Barcode+39+Text&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="/images/logo/favicon.png">
    <link rel="manifest" href="/manifest.json">
    <title>Documents - <%= document.documentName %></title>
</head>
<body>
    <header>
        <%- include('../partials/header') %>
    </header>
    <main id="stock">
        <div class="stockHead">
            <h1>Document - <%= document.documentName %></h1> 
            <button class="createBtn" popovertarget="createStockPopover">Create New Stock</button>
        </div>

        <!-- Popover for Creating Stock -->
        <div id="createStockPopover" popover>
            <form action="/addStock" method="POST" enctype="multipart/form-data">
                <h2>Add New Stock Item</h2>
                <input type="hidden" name="documentId" value="<%= document._id %>">
                
                <label for="create_image">Product Image</label>
                <input type="file" id="create_image" name="image" accept="image/*" capture="camera" />

                <label for="create_productName">Product Name</label>
                <input type="text" id="create_productName" name="productName" maxlength="35" placeholder="Product Name" required>

                <label for="create_productCode">Product Code</label>
                <input type="text" id="create_productCode" name="productCode" placeholder="Product Code">

                <label for="create_Brand">Brand</label>
                <input type="text" id="create_Brand" name="Brand" placeholder="Brand">

                <label for="create_Category">Category</label>
                <select id="create_Category" name="Category">
                    <option value="Tools">Tools</option>
                    <option value="Sundries">Sundries</option>
                    <option value="Chemicals">Chemicals</option>
                    <option value="Hardware">Hardware</option>
                    <option value="Misc">Misc</option>
                </select>

                <label for="create_Qty">Quantity</label>
                <input type="number" id="create_Qty" name="Qty" placeholder="Qty" required>
                
                <label for="create_RRP">RRP</label>
                <input type="text" id="create_RRP" name="RRP" placeholder="RRP">

                <label for="create_Price">Price</label>
                <input type="text" id="create_Price" name="Price" placeholder="Price">

                <label for="create_Barcode">Barcode</label>
                <input type="text" id="create_Barcode" name="Barcode" placeholder="Barcode" required>
                
                <div class="dialog-buttons">
                    <button type="submit">Add Item</button>
                    <button type="button" popovertarget="createStockPopover" popovertargetaction="hide">Cancel</button>
                </div>
            </form>
        </div>
        <br>
        
        <!-- STOCK FILTER FORM -->
        <div class="stockFilter">
            <form action="/document/<%= document._id %>/stock" method="GET">
                <label for="categoryFilter">Filter by Category:</label>
                <select name="category" id="categoryFilter" onchange="this.form.submit()">
                    <option value="" <%= selectedCategory === '' ? 'selected' : '' %>>All</option>
                    <option value="Tools" <%= selectedCategory === 'Tools' ? 'selected' : '' %>>Tools</option>
                    <option value="Sundries" <%= selectedCategory === 'Sundries' ? 'selected' : '' %>>Sundries</option>
                    <option value="Chemicals" <%= selectedCategory === 'Chemicals' ? 'selected' : '' %>>Chemicals</option>
                    <option value="Hardware" <%= selectedCategory === 'Hardware' ? 'selected' : '' %>>Hardware</option>
                    <option value="Misc" <%= selectedCategory === 'Misc' ? 'selected' : '' %>>Misc</option>
                </select>
                <button type="submit">Filter</button>
            </form>
        </div>
        
        <br>

        <!-- STOCK DISPLAY TABLE -->
        <form class="stockDisplay" action="/selected" method="POST">
            <input type="hidden" name="documentId" value="<%= document._id %>">
            <% if (stock && stock.length > 0) { %>
                <table>
                    <thead>
                        <tr>
                            <th style="width:1vw">
                                <!-- "SELECT ALL" CHECKBOX -->
                                <input type="checkbox" id="selectAllCheckbox" title="Select All">
                            </th>
                            <th>Image</th>
                            <th style="width:10vw">Name</th>
                            <th>Code</th>
                            <th>Brand</th>
                            <th>Category</th>
                            <th style="width:2vw">Qty</th>
                            <th>RRP</th>
                            <th>Price</th>
                            <th style="width:10vw">Barcode</th>
                            <th style="width:3vw"></th>
                            <th style="width:3vw"></th>
                        </tr>
                    </thead>
                    <tbody class="tableScroll">
                        <% stock.forEach(function(item) { %>
                            <tr id="item-<%= item.barcode %>">
                                <td class="checkbox">
                                    <!-- ITEM CHECKBOXES -->
                                    <input type="checkbox" class="stock-checkbox" name="selectedBarcodes" value="<%= item.barcode %>">
                                </td>
                                <td>
                                    <% if (item && item.imageUrl) { %>
                                        <img src="<%= item.imageUrl %>" alt="Product Image" style="width:50px; height:auto;">
                                    <% } else { %>
                                        No image
                                    <% } %>
                                </td>
                                <td><%= item.productName %></td>
                                <td><%= item.productCode %></td>
                                <td><%= item.brand %></td>
                                <td><%= item.category %></td>
                                <td><%= item.qty %></td>
                                <td>£<%= item.rrp %></td>
                                <td>£<%= item.price %></td>
                                <td><%= item.barcode %></td>
                                <td>
                                    <button class="delBtn" type="button" onclick="deleteItem('<%= item.barcode %>', '<%= document._id %>')">
                                        <span class="material-symbols-outlined">delete</span>
                                    </button> 
                                </td>
                                <td>
                                    <button class="editBtn" type="button" 
                                            data-item='<%- JSON.stringify(item) %>' 
                                            onclick="editItem(this)">
                                        <span class="material-symbols-outlined">edit</span>
                                    </button>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
                <br>
                <hr>
                <div class="selectBtn">
                    <button type="submit">View Selected</button>
                </div>
            <% } else { %>
                <div class="no-stock-message">
                    <h3>No Stock Found</h3>
                    <p>There are no items in this document that match the current filter.</p>
                    <p>Try selecting a different category or adding a new item.</p>
                </div>
            <% } %>
        </form>

        <!-- PAGINATION CONTROLS -->
        <% if (totalPages > 1) { %>
            <div class="pagination">
                <!-- Previous Button -->
                <% if (currentPage > 1) { %>
                    <a href="/document/<%= document._id %>/stock?page=<%= currentPage - 1 %>&category=<%= selectedCategory %>">&laquo; Previous</a>
                <% } else { %>
                    <span class="disabled">&laquo; Previous</span>
                <% } %>

                <!-- Page Number Links -->
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <a href="/document/<%= document._id %>/stock?page=<%= i %>&category=<%= selectedCategory %>" class="<%= i == currentPage ? 'active' : '' %>">
                        <%= i %>
                    </a>
                <% } %>

                <!-- Next Button -->
                <% if (currentPage < totalPages) { %>
                    <a href="/document/<%= document._id %>/stock?page=<%= currentPage + 1 %>&category=<%= selectedCategory %>">Next &raquo;</a>
                <% } else { %>
                    <span class="disabled">Next &raquo;</span>
                <% } %>
            </div>
        <% } %>

        <!-- HIDDEN DELETE FORM -->
        <form id="deleteForm" action="/delete" method="POST" style="display:none;">
            <input type="hidden" name="barcode" id="deleteBarcode">
            <input type="hidden" name="documentId" id="deleteDocumentId">
        </form>

        <!-- EDIT POP-UP DIALOG -->
        <dialog id="editStockDialog">
            <form action="/updateStock" method="POST">
                <h2>Edit Stock Item</h2>
                <!-- Add a hidden input to send the current page number -->
                <input type="hidden" name="currentPage" value="<%= currentPage %>">
                <input type="hidden" id="edit_originalBarcode" name="originalBarcode">
                <input type="hidden" name="documentId" value="<%= document._id %>">
                <div class="current-image-preview">
                    <p>Current Image:</p>
                    <img id="edit_currentImage" src="" alt="Current product image" style="max-width: 100px; max-height: 100px;">
                </div>

                <label for="edit_image">Upload New Image (optional)</label>
                <input type="file" id="edit_image" name="image" accept="image/*" />

                <label for="edit_productName">Product Name</label>
                <input type="text" id="edit_productName" name="productName" maxlength="35" required>
                <label for="edit_productCode">Product Code</label>
                <input type="text" id="edit_productCode" name="productCode">
                <label for="edit_Brand">Brand</label>
                <input type="text" id="edit_Brand" name="Brand">
                <label for="edit_Category">Category</label>
                <select id="edit_Category" name="Category">
                    <option value="Tools">Tools</option>
                    <option value="Sundries">Sundries</option>
                    <option value="Chemicals">Chemicals</option>
                    <option value="Hardware">Hardware</option>
                    <option value="Misc">Misc</option>
                </select>
                <label for="edit_Qty">Quantity</label>
                <input type="number" id="edit_Qty" name="Qty">
                <label for="edit_RRP">RRP</label>
                <input type="text" id="edit_RRP" name="RRP">
                <label for="edit_Price">Price</label>
                <input type="text" id="edit_Price" name="Price">
                <label for="edit_Barcode">Barcode</label>
                <input type="text" id="edit_Barcode" name="Barcode" required>
                <div class="dialog-buttons">
                    <button type="submit">Update Item</button>
                    <button type="button" onclick="document.getElementById('editStockDialog').close()">Cancel</button>
                </div>
            </form>
        </dialog>

        <script>
            function deleteItem(barcode, documentId) {
                if(confirm('Are you sure you want to delete this item?')) {
                    document.getElementById('deleteBarcode').value = barcode;
                    document.getElementById('deleteDocumentId').value = documentId;
                    document.getElementById('deleteForm').submit();
                }
            }

            function editItem(buttonElement) {
                const stockItemJSON = buttonElement.getAttribute('data-item');
                const stockItem = JSON.parse(stockItemJSON);
                const dialog = document.getElementById('editStockDialog');
                
                dialog.querySelector('#edit_originalBarcode').value = stockItem.barcode;
                dialog.querySelector('#edit_productName').value = stockItem.productName;
                dialog.querySelector('#edit_productCode').value = stockItem.productCode;
                dialog.querySelector('#edit_Brand').value = stockItem.brand;
                dialog.querySelector('#edit_Category').value = stockItem.category;
                dialog.querySelector('#edit_Qty').value = stockItem.qty;
                dialog.querySelector('#edit_RRP').value = stockItem.rrp;
                dialog.querySelector('#edit_Price').value = stockItem.price;
                dialog.querySelector('#edit_Barcode').value = stockItem.barcode;
                
                dialog.showModal();
            }

            // JAVASCRIPT FOR "SELECT ALL"
            document.addEventListener('DOMContentLoaded', () => {
                const selectAllCheckbox = document.getElementById('selectAllCheckbox');
                if (selectAllCheckbox) {
                    selectAllCheckbox.addEventListener('click', function() {
                        const allItemCheckboxes = document.querySelectorAll('.stock-checkbox');
                        allItemCheckboxes.forEach(checkbox => {
                            checkbox.checked = this.checked;
                        });
                    });
                }
            });
        </script>
    </main>
</body>
</html>
