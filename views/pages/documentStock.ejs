<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stock - <%= document.documentName %></title>
    <link rel="stylesheet" href="/styles/main.css"/>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    
    <!-- 1. INCLUDE THE SCANNER LIBRARY -->
    <script src="https://unpkg.com/html5-qrcode" type="text/javascript"></script>

    <style>
        /* --- PAGINATION STYLING --- */
        .pagination {
            display: flex;
            justify-content: center;
            padding: 1em 0;
            margin-top: 1.5em;
            list-style: none;
        }

        .pagination a {
            color: #F98D67;
            padding: 8px 16px;
            text-decoration: none;
            transition: background-color .3s;
            border: 1px solid #ddd;
            margin: 0 4px;
            border-radius: 4px;
        }

        .pagination a.active {
            background-color: #F98D67;
            color: white;
            border: 1px solid #F98D67;
        }

        .pagination a:hover:not(.active) {
            background-color: #f2f2f2;
        }

        .pagination span.disabled {
            color: #ccc;
            padding: 8px 16px;
            border: 1px solid #ddd;
            margin: 0 4px;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <header>
        <%- include('../partials/header') %>
    </header>
    <main id="stock">
        <h1>Document - <%= document.documentName %></h1>

        <!-- Filter and Create Forms -->
        <!-- ... your existing filter and create forms go here ... -->

        <form class="stockDisplay" action="/selected" method="POST">
            <input type="hidden" name="documentId" value="<%= document._id %>">
            
            <% if (stock && stock.length > 0) { %>
                <table>
                    <thead>
                        <tr>
                            <th><input type="checkbox" id="selectAllCheckbox"></th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Barcode</th>
                            <th>Qty</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% stock.forEach(function(item) { %>
                            <!-- Add a unique ID to each row for scrolling -->
                            <tr id="item-<%= item.barcode %>">
                                <td class="checkbox">
                                    <input type="checkbox" class="stock-checkbox" name="selectedBarcodes" value="<%= item.barcode %>">
                                </td>
                                <td>
                                    <% if (item.imageUrl) { %>
                                        <img src="<%= item.imageUrl %>" alt="<%= item.productName %>" style="width:50px;">
                                    <% } else { %>
                                        No Image
                                    <% } %>
                                </td>
                                <td><%= item.productName %></td>
                                <td><%= item.barcode %></td>
                                <td><%= item.qty %></td>
                                <td>
                                    <button class="editBtn" type="button" data-item='<%- JSON.stringify(item) %>' onclick="editItem(this)">
                                        <span class="material-symbols-outlined">edit</span>
                                    </button>
                                    <button class="delBtn" type="button" onclick="deleteItem('<%= item.barcode %>', '<%= document._id %>')">
                                        <span class="material-symbols-outlined">delete</span>
                                    </button>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
                <div class="selectBtn">
                    <button type="submit">View Selected</button>
                </div>
            <% } else { %>
                <div class="no-stock-message">
                    <h3>No Stock Found</h3>
                    <p>There are no items in this document that match the current filter.</p>
                </div>
            <% } %>
        </form>

        <!-- PAGINATION CONTROLS -->
        <% if (totalPages > 1) { %>
            <div class="pagination">
                <!-- Previous Button -->
                <% if (currentPage > 1) { %>
                    <a href="/document/<%= document._id %>/stock?page=<%= currentPage - 1 %>&category=<%= selectedCategory %>">&laquo; Previous</a>
                <% } else { %>
                    <span class="disabled">&laquo; Previous</span>
                <% } %>

                <!-- Page Number Links -->
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <a href="/document/<%= document._id %>/stock?page=<%= i %>&category=<%= selectedCategory %>" class="<%= i == currentPage ? 'active' : '' %>">
                        <%= i %>
                    </a>
                <% } %>

                <!-- Next Button -->
                <% if (currentPage < totalPages) { %>
                    <a href="/document/<%= document._id %>/stock?page=<%= currentPage + 1 %>&category=<%= selectedCategory %>">Next &raquo;</a>
                <% } else { %>
                    <span class="disabled">Next &raquo;</span>
                <% } %>
            </div>
        <% } %>

        <!-- CREATE STOCK DIALOG -->
        <dialog id="createStockPopover">
            <form action="/addStock" method="POST" enctype="multipart/form-data">
                <h2>Create New Stock</h2>
                <input type="hidden" name="documentId" value="<%= document._id %>">
                
                <!-- 2. CONTAINER FOR THE CAMERA FEED -->
                <div id="reader" style="width: 100%;"></div>

                <label for="image">Product Image</label>
                <input type="file" name="image" accept="image/*" capture="camera" />

                <label for="productName">Product Name</label>
                <input type="text" name="productName" maxlength="35" placeholder="Product Name" required>
                
                <label for="productCode">Product Code</label>
                <input type="text" name="productCode" placeholder="Product Code">
                
                <label for="Brand">Brand</label>
                <input type="text" name="Brand" placeholder="Brand">
                
                <label for="Category">Category</label>
                <select name="Category">
                    <option value="Tools">Tools</option>
                    <option value="Sundries">Sundries</option>
                    <option value="Chemicals">Chemicals</option>
                    <option value="Hardware">Hardware</option>
                    <option value="Misc">Misc</option>
                </select>
                
                <label for="Qty">Quantity</label>
                <input type="number" name="Qty" placeholder="Qty" required>
                
                <label for="RRP">RRP</label>
                <input type="text" name="RRP" placeholder="e.g., 19.99">
                
                <label for="Price">Price</label>
                <input type="text" name="Price" placeholder="e.g., 15.50" required>
                
                <label for="Barcode">Barcode</label>
                
                <!-- 3. INPUT GROUP WITH SCAN BUTTON -->
                <div class="barcode-input-group">
                    <input type="text" id="create_Barcode" name="Barcode" placeholder="Barcode" required>
                    <button type="button" id="startScanBtn" class="scan-btn" title="Scan Barcode">
                        <span class="material-symbols-outlined">qr_code_scanner</span>
                    </button>
                </div>

                <div class="dialog-buttons">
                    <button type="submit">Add Stock</button>
                    <button type="button" onclick="closeCreateDialog()">Cancel</button>
                </div>
            </form>
        </dialog>

        <!-- EDIT POP-UP DIALOG -->
        <dialog id="editStockDialog">
            <form action="/updateStock" method="POST" enctype="multipart/form-data">
                <h2>Edit Stock Item</h2>
                <input type="hidden" name="currentPage" value="<%= currentPage %>">
                <input type="hidden" id="edit_originalBarcode" name="originalBarcode">
                <input type="hidden" name="documentId" value="<%= document._id %>">

                <!-- Current Image Preview -->
                <div class="current-image-preview">
                    <p>Current Image:</p>
                    <img id="edit_currentImage" src="" alt="Current product image" style="max-width: 100px; max-height: 100px;">
                </div>

                <!-- New Image Upload -->
                <label for="edit_image">Upload New Image (optional)</label>
                <input type="file" id="edit_image" name="image" accept="image/*" />

                <label for="edit_productName">Product Name</label>
                <input type="text" id="edit_productName" name="productName" maxlength="35" required>
                
                <!-- ... other form fields ... -->
                 <label for="edit_productCode">Product Code</label>
                <input type="text" id="edit_productCode" name="productCode">
                <label for="edit_Brand">Brand</label>
                <input type="text" id="edit_Brand" name="Brand">
                <label for="edit_Category">Category</label>
                <select id="edit_Category" name="Category">
                    <option value="Tools">Tools</option>
                    <option value="Sundries">Sundries</option>
                    <option value="Chemicals">Chemicals</option>
                    <option value="Hardware">Hardware</option>
                    <option value="Misc">Misc</option>
                </select>
                <label for="edit_Qty">Quantity</label>
                <input type="number" id="edit_Qty" name="Qty">
                <label for="edit_RRP">RRP</label>
                <input type="text" id="edit_RRP" name="RRP">
                <label for="edit_Price">Price</label>
                <input type="text" id="edit_Price" name="Price">
                <label for="edit_Barcode">Barcode</label>
                <input type="text" id="edit_Barcode" name="Barcode" required>

                <div class="dialog-buttons">
                    <button type="submit">Update Item</button>
                    <button type="button" onclick="document.getElementById('editStockDialog').close()">Cancel</button>
                </div>
            </form>
        </dialog>

        <!-- Hidden forms and script tag for edit/delete/select all -->
        <form id="deleteForm" action="/delete" method="POST" style="display:none;">
            <input type="hidden" name="barcode" id="deleteBarcode">
            <input type="hidden" name="documentId" id="deleteDocumentId">
        </form>

        <script>
            let html5QrCode;
            let isScanning = false;

            async function startScanning() {
                const readerElement = document.getElementById("reader");
                if (!readerElement) return;

                // If already running, stop it
                if (isScanning) {
                    await stopScanning();
                    return;
                }

                html5QrCode = new Html5Qrcode("reader");
                
                // Use a smaller box for mobile efficiency
                const config = { fps: 10, qrbox: { width: 250, height: 250 } };
                
                try {
                    // Try to start the camera
                    await html5QrCode.start(
                        { facingMode: "environment" }, // Prefer back camera
                        config, 
                        onScanSuccess,
                        onScanFailure
                    );
                    isScanning = true;
                    // Update button to show "Stop" state if you like, or just leave it
                } catch (err) {
                    console.error("Error starting scanner", err);
                    alert("Could not start camera. Ensure you are using HTTPS and have granted camera permissions.");
                }
            }

            function onScanSuccess(decodedText, decodedResult) {
                // Handle the scanned code
                console.log(`Code matched = ${decodedText}`, decodedResult);
                
                // Put the barcode into the input field
                document.getElementById('create_Barcode').value = decodedText;
                
                // Automatically stop scanning after a successful read
                stopScanning();
            }

            function onScanFailure(error) {
                // handle scan failure, usually better to ignore and keep scanning.
                // console.warn(`Code scan error = ${error}`);
            }

            async function stopScanning() {
                if (html5QrCode && isScanning) {
                    try {
                        await html5QrCode.stop();
                        html5QrCode.clear(); // clears the canvas
                        isScanning = false;
                        document.getElementById('reader').innerHTML = ""; // Clean up div
                    } catch (err) {
                        console.error("Failed to stop scanner", err);
                    }
                }
            }

            function closeCreateDialog() {
                const dialog = document.getElementById('createStockPopover');
                // Ensure scanner is off when closing the dialog
                stopScanning().then(() => {
                    dialog.close();
                });
            }

            // Listener for the Scan Button
            document.addEventListener('DOMContentLoaded', () => {
                const scanBtn = document.getElementById('startScanBtn');
                if(scanBtn) {
                    scanBtn.addEventListener('click', startScanning);
                }

                // --- EXISTING CREATE BUTTON LOGIC ---
                // We ensure the create button opens the modal
                const createBtn = document.querySelector('.createBtn');
                if(createBtn) {
                    createBtn.onclick = function() {
                        document.getElementById('createStockPopover').showModal();
                    };
                }
            });

            // --- EXISTING DELETE/EDIT LOGIC ---
            function deleteItem(barcode, documentId) {
                if(confirm('Are you sure you want to delete this item?')) {
                    document.getElementById('deleteBarcode').value = barcode;
                    document.getElementById('deleteDocumentId').value = documentId;
                    document.getElementById('deleteForm').submit();
                }
            }

            function editItem(buttonElement) {
                const stockItemJSON = buttonElement.getAttribute('data-item');
                const stockItem = JSON.parse(stockItemJSON);
                const dialog = document.getElementById('editStockDialog');
                
                dialog.querySelector('#edit_originalBarcode').value = stockItem.barcode;
                dialog.querySelector('#edit_productName').value = stockItem.productName;
                // ... populate fields ...
                if(dialog.querySelector('#edit_productCode')) dialog.querySelector('#edit_productCode').value = stockItem.productCode;
                if(dialog.querySelector('#edit_Brand')) dialog.querySelector('#edit_Brand').value = stockItem.brand;
                if(dialog.querySelector('#edit_Category')) dialog.querySelector('#edit_Category').value = stockItem.category;
                if(dialog.querySelector('#edit_Qty')) dialog.querySelector('#edit_Qty').value = stockItem.qty;
                if(dialog.querySelector('#edit_RRP')) dialog.querySelector('#edit_RRP').value = stockItem.rrp;
                if(dialog.querySelector('#edit_Price')) dialog.querySelector('#edit_Price').value = stockItem.price;
                if(dialog.querySelector('#edit_Barcode')) dialog.querySelector('#edit_Barcode').value = stockItem.barcode;

                const currentImage = dialog.querySelector('#edit_currentImage');
                if (stockItem.imageUrl) {
                    currentImage.src = stockItem.imageUrl;
                    currentImage.style.display = 'block';
                } else {
                    currentImage.style.display = 'none';
                }
                
                dialog.showModal();
            }
        </script>
    </main>
</body>
</html>