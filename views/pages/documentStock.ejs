<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/scripts/stock.js"></script>
    <link rel="stylesheet" href="/styles/main.css"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Libre+Barcode+39+Text&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=delete" />
    <link rel="icon" type="image/x-icon" href="/images/logo/favicon.png">
    <link rel="manifest" href="/manifest.json">
    <title>Documents - <%= document.documentName %></title>
</head>
<body>
    <header>
        <%- include('../partials/header') %>
    </header>
    <main id="stock">
        </div>
        <div class="stockHead">
           <h1>Document - <%= document.documentName %></h1> 
           <!-- <button class="createBtn" popovertarget="createStock" popovertargetaction="show">Create </button> -->
        </div>
        
            <div id="createStock">
                <form action="/addStock" method="POST" enctype="multipart/form-data">
                    <input type="file" name="image" accept="image/*" capture="camera" /> <!-- Image upload field -->
                    <input type="hidden" name="documentId" value="<%= document._id %>">
                    <input type="text" name="productName" maxlength="35" placeholder="Product Name">
                    <input type="text" name="productCode" placeholder="Product Code">
                    <input type="text" name="Brand" placeholder="Brand">
                    <select name="Category">
                        <option value="Tools">Tools</option>
                        <option value="Sundries">Sundries</option>
                        <option value="Chemicals">Chemicals</option>
                        <option value="Hardware">Hardware</option>
                        <option value="Misc">Misc</option>
                    </select>
                    <input type="text" name="Qty" placeholder="Qty">
                    <input type="text" name="RRP" placeholder="RRP">
                    <input type="text" name="Price" placeholder="Price">
                    <input type="text" name="Barcode" placeholder="Barcode">

                    <button>Add</button>
                </form>
            </div>
            <br>
            <!-- STOCK FILTER BY BRAND -->
            <form action="/stock" method="GET">
                <label for="categoryFilter">Filter by Category:</label>
                <select name="category" id="categoryFilter">
                    <option value="" <%= selectedCategory === '' ? 'selected' : '' %>>All</option>
                    <option value="Tools" <%= selectedCategory === 'Tools' ? 'selected' : '' %>>Tools</option>
                    <option value="Sundries" <%= selectedCategory === 'Sundries' ? 'selected' : '' %>>Sundries</option>
                    <option value="Chemicals" <%= selectedCategory === 'Chemicals' ? 'selected' : '' %>>Chemicals</option>
                    <option value="Hardware" <%= selectedCategory === 'Hardware' ? 'selected' : '' %>>Hardware</option>
                    <option value="Misc" <%= selectedCategory === 'Misc' ? 'selected' : '' %>>Misc</option>
                </select>
                <button type="submit">Filter</button>
            </form>
            <br>
            <!-- STOCK IS DISPLAYED IN TABLE -->
        <form class="stockDisplay" action="/selected" method="POST">
            <input type="hidden" name="documentId" value="<%= document._id %>">
        <% if (stock && stock.length > 0) { %>

            <table>
                <thead>
                    <tr>
                        <th style="width:1vw"></th>
                        <th>Product Image</th>
                        <th style="width:10vw">Product Name</th>
                        <th>Product Code</th>
                        <th>Brand</th>
                        <th>Category</th>
                        <th style="width:2vw">Qty</th>
                        <th>RRP</th>
                        <th>Price</th>
                        <th style="width:10vw">Barcode</th>
                        <th style="width:3vw"></th>
                    </tr>
                </thead>
                <tbody class="tableScroll">
                    <% stock.forEach(function(stock) { %>
                        <tr>
                            <%# Table row content remains the same... %>
                            <td class="checkbox">
                                <input type="checkbox" name="selectedBarcodes[]" value="<%= stock.barcode %>">
                            </td>
                            <td>
                                <% if (stock && stock.imageUrl) { %>
                                    <img src="<%= stock.imageUrl %>" alt="Product Image">
                                <% } else { %>
                                    No image
                                <% } %>
                            </td>
                            <td><%= stock.productName %></td>
                            <td><%= stock.productCode %></td>
                            <td><%= stock.brand %></td>
                            <td><%= stock.category %></td>
                            <td><%= stock.qty %></td>
                            <td>£<%= stock.rrp %></td>
                            <td>£<%= stock.price %></td>
                            <td><%= stock.barcode %></td>
                            <td>
                                <button class="delBtn" type="button" onclick="deleteItem('<%= stock.barcode %>')">
                                    <span class="material-symbols-outlined">delete</span>
                                </button> 
                            </td>
                            <td>
                                <button class="delBtn" type="button" onclick="deleteItem('<%= stock.barcode %>')">
                                    <span class="material-symbols-outlined">edit</span>
                                </button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            
            </table>
            <br>
            <hr>
            <div class="selectBtn">
                <button type="submit">View Selected</button>
            </div>
            

        <% } else { %>
                <div class="no-stock-message">
                    <h3>No Stock Found</h3>
                    <p>There are no items in this document that match the current filter.</p>
                    <p>Try selecting a different category or adding a new item.</p>
                </div>
        <% } %>

        </form>
        <form id="deleteForm" action="/delete" method="POST" style="display:none;">
            <input type="hidden" name="barcode" id="deleteBarcode">
            <input type="hidden" name="documentId" id="deleteDocumentId">
        </form>

        <script>
            // 3. UPDATE THE FUNCTION TO ACCEPT AND USE THE documentId
            function deleteItem(barcode, documentId) {
                if(confirm('Are you sure you want to delete this item?')) {
                    document.getElementById('deleteBarcode').value = barcode;
                    document.getElementById('deleteDocumentId').value = documentId; // Set the new hidden input
                    document.getElementById('deleteForm').submit();
                }
            }
        </script>
    </main>
</body>
</html>