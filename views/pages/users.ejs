<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="scripts/stock.js"></script>
    <link rel="stylesheet" href="styles/main.css"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Libre+Barcode+39+Text&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=delete" />
    <link rel="icon" type="image/x-icon" href="images/logo/favicon.png">
    <link rel="manifest" href="manifest.json">
    <title>Users</title>
</head>
<body>
    <header>
        <%- include('../partials/header') %>
    </header>
    <main id="stock">
    <form class="modal-content animate" action="/signUp" method="POST">
        <div class="login-container">
          <label for="uname"><b>Username</b></label>
          <input type="text" placeholder="Enter Username" name="uname" required>
    
          <label for="psw"><b>Password</b></label>
          <input type="password" placeholder="Enter Password" name="psw" required>

          <label for="email"><b>Email</b></label>
          <input type="email" placeholder="Enter Email" name="email" required>
            
          <label for="accountType"><b>Account Type</b></label>
          <select name="accountType">
            <option value="Staff">Staff</option>
            <option value="Admin">Admin</option>
          </select>

          <button type="submit">Sign-Up</button>
        </div>
      </form>
            <table>
                <thead>
                    <tr>
                        <th>Username</th>
                        <th style="width:10vw">Email</th>
                        <th style="width:10vw">Account Type</th>
                        <th>Created</th>
                    </tr>
                </thead>
                <tbody class="tableScroll">
                    <% users.forEach(function(user) { %>
                        <tr>
                            <td><%= user.login.username %></td>
                            <td><%= user.email %></td>
                            <td><%= user.accountType %></td>
                            <td><%= user.created %></td>
                        </tr>
                    <% }); %>
                </tbody>
            
            </table>
    </main>
</body>
</html>

