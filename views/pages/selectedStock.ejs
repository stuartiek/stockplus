<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Selected Stock</title>
    <link rel="stylesheet" href="/styles/main.css"/>
    
    <!-- Include the JsBarcode library -->
    <script src="https://cdn.jsdelivr.net/npm/jsbarcode@3.11.5/dist/JsBarcode.all.min.js"></script>
</head>
<body>
    <header>
        <%- include('../partials/header') %>
    </header>
    <main id="stock">
        <div class="stockHead">
            <h1>Selected Stock Items</h1>
            <button class="printBtn" onclick="window.print()">Print</button>
        </div>
        <br>
        <div class="labelDisplay">
            <% selectedItems.forEach(item => { %>
                <div class="label <%= (document && document.labelType) ? document.labelType.toLowerCase() : 'shelf' %>">
                    <div class="labelHead">
                        <h2 class="labelName"><%= item.productName %></h2>
                        <% if (item.rrp && item.rrp !== "0.00" && item.rrp !== item.price) { %>
                            <p class="labelRrp">£<%= item.rrp %></p>
                        <% } %>
                    </div>
                    <div class="labelMid">
                        <p class="labelBrand"><%= item.brand %></p>
                        <h1 class="labelPrice">£<%= item.price %></h1>
                    </div>
                    <div class="labelFooter">
                        <p class="product-code"><%= item.productCode %></p>
                        
                        <!-- DYNAMIC BARCODE LOGIC -->
                        <% if (item.barcode && item.barcode.length === 8) { %>
                            <!-- If barcode is 8 digits, use EAN8 format -->
                            <svg class="labelBarcode"
                                jsbarcode-value="<%= item.barcode %>"
                                jsbarcode-format="EAN8"
                                jsbarcode-displayValue="true"
                                jsbarcode-fontSize="14"
                                jsbarcode-margin="0"
                                jsbarcode-height="30">
                            </svg>
                        <% } else { %>
                            <!-- Otherwise, try EAN13 format first -->
                            <svg class="labelBarcode"
                                jsbarcode-value="<%= item.barcode %>"
                                jsbarcode-format="EAN13"
                                jsbarcode-displayValue="true"
                                jsbarcode-fontSize="14"
                                jsbarcode-margin="0"
                                jsbarcode-height="30">
                            </svg>
                        <% } %>

                        <p class="year">2025</p>
                    </div>
                </div>
            <% }) %>
        </div>
    </main>

    <!-- SCRIPT TO GENERATE BARCODES WITH FALLBACK -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const barcodeElements = document.querySelectorAll('.labelBarcode');

            barcodeElements.forEach(svgElement => {
                const barcodeValue = svgElement.getAttribute('jsbarcode-value');
                
                try {
                    // Attempt to generate using the format specified in the HTML (EAN8 or EAN13)
                    JsBarcode(svgElement).init();
                } catch (e) {
                    // If EAN generation fails, log a warning and try CODE128 fallback
                    console.warn(`EAN generation failed for ${barcodeValue}, falling back to CODE128.`);
                    
                    try {
                        JsBarcode(svgElement, barcodeValue, {
                            format: "CODE128",
                            displayValue: true,
                            fontSize: 14,
                            margin: 0,
                            height: 30
                        });
                    } catch (e2) {
                        console.error('Could not generate barcode even with fallback:', e2);
                        
                        // If even fallback fails, show error on label
                        const parentDiv = svgElement.parentElement;
                        const errorMsg = document.createElement('div');
                        errorMsg.style.color = 'red';
                        errorMsg.style.fontSize = '10px';
                        errorMsg.style.textAlign = 'center';
                        errorMsg.innerHTML = `Invalid Barcode:<br>${barcodeValue}`;
                        
                        svgElement.style.display = 'none';
                        if(parentDiv) {
                            parentDiv.insertBefore(errorMsg, svgElement);
                        }
                    }
                }
            });
        });
    </script>
</body>
</html>