<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="scripts/stock.js"></script>
    <link rel="stylesheet" href="styles/main.css"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Libre+Barcode+EAN13&display=swap" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="images/logo/favicon.png">
    <link rel="manifest" href="manifest.json">
    <script src="https://kit.fontawesome.com/e71e3c46fe.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/jsbarcode@3.11.5/dist/JsBarcode.all.min.js"></script>
    <title>Stock</title>
</head>
<body>
    <header>
        <%- include('../partials/header') %>
    </header>
    <main id="stock">
        <div class="stockHead">
            <h1>Selected Stock Items</h1>
            <button class="printBtn" onclick="window.print()">Print</button>
        </div>
        <br>
        <div class="labelDisplay">
            <% selectedItems.forEach(item => { %>
                <div class="label <%= (document && document.labelType) ? document.labelType.toLowerCase() : 'shelf' %>">
                    <div class="labelHead">
                        <h2 class="labelName"><%= item.productName %></h2>
                        <% if (item.rrp && item.rrp !== "0.00" && item.rrp !== item.price) { %>
                            <p class="labelRrp">£<%= item.rrp %></p>
                        <% } %>
                    </div>
                    <div class="labelMid">
                        <p class="labelBrand"><%= item.brand %></p>
                        <h1 class="labelPrice">£<%= item.price %></h1>
                    </div>
                    <div class="labelFooter">
                        <p class="product-code"><%= item.productCode %></p>
                        <!-- NEW BARCODE STRUCTURE -->
                        <svg class="labelBarcode"
                            jsbarcode-value="<%= item.barcode %>"
                            jsbarcode-format="EAN13"
                            jsbarcode-displayValue="true"
                            jsbarcode-fontSize="14"
                            jsbarcode-margin="0"
                            jsbarcode-height="30">
                        </svg>
                        <p class="year">2025</p>
                    </div>
                </div>
            <% }) %>
        </div>
    </main>

    <!-- This script will automatically generate the barcodes -->
   <!-- NEW, MORE ROBUST SCRIPT TO GENERATE BARCODES -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Select all elements that need a barcode
            const barcodeElements = document.querySelectorAll('.labelBarcode');

            // Loop through each one and generate the barcode individually
            barcodeElements.forEach(svgElement => {
                try {
                    // This will attempt to generate the barcode
                    JsBarcode(svgElement).init();
                } catch (e) {
                    // If an error occurs (like an invalid EAN13 code), log it to the console
                    console.error('Could not generate barcode:', e);
                    // And display an error message directly on the label for easy debugging
                    const barcodeValue = svgElement.getAttribute('jsbarcode-value');
                    const errorContainer = svgElement.parentElement;
                    if(errorContainer) {
                        errorContainer.innerHTML = `<span style="color: red; font-size: 9px; text-align: center; width: 100%;">Invalid Barcode:<br>${barcodeValue}</span>`;
                    }
                }
            });
        });
    </script>
</body>
</html>