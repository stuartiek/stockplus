<body>
    <header>
        <%- include('../partials/header') %>
    </header>
    <main id="stock">
          <h1 class="stockHead">Selected Stock Items</h1>
          <button onclick="window.print()">Print</button>
          <br>
            <% selectedItems.forEach(item => { %>
                <div class="label">
                    <h1 class="labelName"><%= item.productName %></h1>
                    <h1 class="labelPrice">Â£<%= item.price %></h1>
            
                    <h4 class="labelBrand"><%= item.brand %></h4>
                    <h4 class="labelCode"><%= item.productCode %></h4>
                    <h4>2025</h4>
                    <h4 class="labelBarcode"><%= item.barcode %></h4>
                </div>
            <% }) %>
    </main>
</body>
</html>